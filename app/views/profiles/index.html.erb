<h1>All Profiles</h1>

<% @profiles.each do |profile| %>
  <div class="profile">
    <h2><%= profile.name %></h2>
    <% if profile.profile_picture.attached? %>
      <%= image_tag profile.profile_picture, alt: profile.name, class: "profile-picture" %>
    <% else %>
      <p>No profile picture available</p>
    <% end %>
    <p><strong>Headline:</strong> <%= profile.headline %></p>
    <p><strong>Key Skills:</strong> <%= profile.key_skills %></p>
  </div>
<% end %>
